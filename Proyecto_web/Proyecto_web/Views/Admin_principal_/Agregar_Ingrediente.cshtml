<div class="x_panel">
    <div class="x_title">
        <h2>Lista de Ingredientes </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>

            <li>
               
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>


    <div class="x_content">
        <table class="table">
            <thead>
                <tr>
      
                    <th>Nombre</th>
                    <th>Actualizar</th>
                    <th>Eliminar</th>
                   
                </tr>
            <tbody>

                @foreach (DataRow row in Model.Rows)
                {
                 
                    <tr id="fila_@row["ID"]">
                       

                       
                        <td>@row["Nombre"]</td>
                        <td>
                            @using (Ajax.BeginForm("Consulta_Ingrediente", "Admin_principal_", new { id = @row["ID"] }, new AjaxOptions() { HttpMethod = "POST" }))
                            {@Html.AntiForgeryToken()  <button type="submit" class="btn btn-success">✓</button>}
                        </td>
                        <td>
                            @using (Ajax.BeginForm("Eliminar_Datos_Ing", "Admin_principal_", new { id = @row["ID"] }, new AjaxOptions() { HttpMethod = "POST" }))
                            {
                                @Html.AntiForgeryToken()
                                <button type="submit" class="btn btn-danger">X</button>
                            }

                        </td>


                    </tr>

                }
            </tbody>

        </table>
    </div>
</div>
<script>
    $(document).on("click", ".open-Modal", function () {
        var myDNI = $(this).data('id');
        $(".modal-body #txtNombre").val(myDNI);
    });
</script>
<!--Modal-->
@using (Ajax.BeginForm("Agregar_ingredientes", "Admin_principal_", new AjaxOptions() { HttpMethod = "POST" }))
{ @Html.AntiForgeryToken()
    <div class="fade animated modal" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Agregar ingredientes</h2>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name " class="col-form-label"></label>
                            <input type="text" name="Nombre" class="form-control" required="required" placeholder="Ingrese ingrediente" >
                        </div>

                    </form>
                </div>
                <div class="modal-footer">

                    <button type="submit" class="btn btn-primary">Agregar</button>
                </div>
            </div>
        </div>
    </div>
}



@using (Ajax.BeginForm("Actualizar_Datos_Ing", "Admin_principal_", new AjaxOptions() { HttpMethod = "POST" }))
{

    <div class="modal fade" id="Editar" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h2 class="modal-title" id="exampleModalLabel">Agregar enfermedad</h2>

                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="recipient-name " class="col-form-label"></label>
                            <input type="text" name="Nombre" class="form-control" required="required" placeholder="ID" id="txtId" />

                            <input type="text" name="Nombre" class="form-control" required="required" placeholder="Actualizar Ingrediente" id="txtNombre" />
                        </div>

                    </form>
                </div>
                <div class="modal-footer">

                    <button type="submit" class="btn btn-primary">Editar</button>
                </div>
            </div>
        </div>
    </div>
}


